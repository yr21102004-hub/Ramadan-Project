    <!-- AOS Initialization -->
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
        // AOS Configuration - Initted later
        const initAOS = () => {
            AOS.init({
                duration: 1000,
                once: false, // Changed to false to allow re-animation (more dynamic)
                mirror: true,
                offset: 50,
                easing: 'ease-out-cubic' // Smoother easing
            });
        };

        // Preloader Logic - Show on first visit OR slow loading
        const pageLoadStart = performance.now();
        let preloaderShown = false;

        const hidePreloader = () => {
            const preloader = document.getElementById('preloader');

            // Check if this is the first visit in this session
            const isFirstVisit = !sessionStorage.getItem('preloaderShown');

            // Calculate loading time
            const loadingTime = performance.now() - pageLoadStart;
            const isSlowLoading = loadingTime > 800; // If loading takes more than 800ms

            if (preloader && preloader.style.visibility !== 'hidden') {
                // Show preloader if: First visit OR Slow loading
                if (isFirstVisit || isSlowLoading) {
                    preloaderShown = true;

                    // Mark that preloader has been shown (only for first visit)
                    if (isFirstVisit) {
                        sessionStorage.setItem('preloaderShown', 'true');
                    }

                    // Force a minimum display time of 2.5 seconds to see the animation
                    setTimeout(() => {
                        preloader.style.opacity = '0';
                        preloader.style.visibility = 'hidden';

                        // Initialize Animations NOW so they play as the page is revealed
                        initAOS();

                        // Show Welcome Modal after preloader (only on first visit)
                        if (isFirstVisit) {
                            setTimeout(() => {
                                const modal = document.getElementById('islamic-welcome-modal');
                                if (modal && !sessionStorage.getItem('welcomeShown')) {
                                    // modal.classList.add('active'); // Optional: Uncomment to re-enable welcome modal
                                    // sessionStorage.setItem('welcomeShown', 'true');
                                }
                            }, 500);
                        }
                    }, 2500); // 2.5s Minimum Delay
                } else {
                    // Fast loading and not first visit - hide immediately
                    preloader.style.opacity = '0';
                    preloader.style.visibility = 'hidden';
                    initAOS();
                }
            } else {
                // If preloader already hidden/gone, init AOS immediately
                initAOS();
            }
        };

        // We only start the hiding process after load, but the function above has the enforced delay.
        window.addEventListener('load', hidePreloader);

        // Fallback safety
        setTimeout(hidePreloader, 6000);



        function closeWelcomeModal() {
            document.getElementById('islamic-welcome-modal').classList.remove('active');
        }

        // Navbar Scroll Effect
        const nav = document.getElementById('main-nav');
        window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
                nav.classList.add('scrolled');
            } else {
                nav.classList.remove('scrolled');
            }
        });
    </script>
    <script>
        if ('serviceWorker' in navigator) {
            window.addEventListener('load', () => {
                navigator.serviceWorker.register('/sw.js')
                    .then(registration => {
                        console.log('SW registered: ', registration);
                    })
                    .catch(registrationError => {
                        console.log('SW registration failed: ', registrationError);
                    });
            });
        }
    </script>
</body>

</html>